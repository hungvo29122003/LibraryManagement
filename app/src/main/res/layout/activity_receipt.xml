<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".receiptActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Chọn Độc Giả -->
        <TextView android:text="Chọn Độc Giả" style="@style/TextAppearance.AppCompat.Medium"/>
        <Spinner
            android:id="@+id/spinner_docGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Hiển thị Mã Độc Giả -->
        <TextView android:text="Mã Độc Giả" style="@style/TextAppearance.AppCompat.Medium"/>
        <EditText
            android:id="@+id/edt_maDocGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:focusable="false"/>

        <!-- Chọn Sách -->
        <TextView android:text="Chọn Sách" style="@style/TextAppearance.AppCompat.Medium"/>
        <Spinner
            android:id="@+id/spinner_sach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Nút Thêm Sách -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_themSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:text="Thêm Sách"/>

        <!-- Danh sách sách đã chọn -->
        <ListView
            android:id="@+id/list_sachDaChon"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <!-- Nút Xóa Sách -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_xoaSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:text="Xóa Sách"/>

        <!-- Nút Xác Nhận Mượn -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_xacNhanMuon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:text="Xác Nhận Mượn"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>