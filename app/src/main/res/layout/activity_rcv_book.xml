<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RcvBookActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/book_item_border"
        android:layout_marginBottom="8dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_book"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:paddingVertical="10dp"
                android:src="@drawable/img"/>
            <TextView
                android:id="@+id/title_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/image_book"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@id/image_book"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:text="name : "/>
            <TextView
                android:id="@+id/tv_str_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/title_book"
                android:text="Tuổi trẻ đáng giá bao nhiêu"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="45dp"
                app:layout_constraintStart_toStartOf="@id/title_book"
                android:text="Price : "
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tv_str_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tv_price"
                android:text="25.000 VND"
                app:layout_constraintStart_toStartOf="@id/tv_str_name"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_price"
                android:text="quantity : "
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/tv_price"/>
            <TextView
                android:id="@+id/tv_str_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tv_quantity"
                app:layout_constraintTop_toTopOf="@id/tv_quantity"
                android:text="20"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_quantity"
                app:layout_constraintStart_toStartOf="@id/tv_quantity"
                android:text="Category : "
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tv_str_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tv_category"
                app:layout_constraintStart_toEndOf="@id/tv_category"
                android:text="Sách "
                android:layout_marginTop="5dp"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="area : "
                app:layout_constraintStart_toStartOf="@id/tv_category"
                app:layout_constraintTop_toBottomOf="@id/tv_category"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tv_str_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Section - First Floor"
                app:layout_constraintStart_toEndOf="@id/tv_area"
                app:layout_constraintTop_toTopOf="@id/tv_area"
                android:layout_marginTop="5sp"/>
            <ImageView
                android:id="@+id/tv_icon_3_cham"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_3_cham"
                app:layout_constraintTop_toTopOf="@id/tv_str_area"
                app:layout_constraintStart_toEndOf="@id/tv_str_area"
                android:layout_marginStart="15dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>