<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".item_chi_tiet_sach">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Tên sách -->
            <TextView
                android:id="@+id/tv_tenSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên Sách: Lập trình Android"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Số lượng mượn -->
            <TextView
                android:id="@+id/tv_soLuong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số Lượng: 2"
                android:textSize="14sp" />

            <!-- Trạng thái sách (nếu đã trả) -->
            <TextView
                android:id="@+id/tv_trangThai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trạng Thái: Chưa trả"
                android:textSize="14sp"
                android:textColor="@android:color/holo_red_dark" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>